<Window x:Class="POP_SF27_2016_Projekat.GUI.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:POP_SF27_2016_Projekat.GUI"
        mc:Ignorable="d"
        Title="Login" Height="300" Width="300" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        
        <TextBlock Name="tbWelcome" HorizontalAlignment="Center" VerticalAlignment="Center" Width="200" Margin="20,20,20,20" TextWrapping="Wrap" TextAlignment="Center" Grid.ColumnSpan="2" FontSize="14"/>
        <Button Name="About" Content="?" HorizontalAlignment="Right" VerticalAlignment="Top" Width="20" Height="20" Margin="0,5,5,0" Grid.Column="1" Grid.Row="0"/>
        <Label Name="lbUsername" Content="Username:" HorizontalAlignment="Left" VerticalAlignment="Top" Height="22" Margin="10,10,0,10" Width="63" Grid.Column="0" Grid.Row="1"/>
        <Label Name="lbPassword" Content="Password:" HorizontalAlignment="Left"  VerticalAlignment="Bottom" Height="22" Margin="10,10,0,10" Width="60" Grid.Column="0" Grid.Row="1"/>
        <TextBox Name="tbUsername" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Height="22" Margin="10,10,10,10" Grid.Column="1" Grid.Row="1"/>
        <PasswordBox Name="pbPassword" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="120" Height="22" Margin="10,10,10,10" Grid.Column="1" Grid.Row="1"/>
        <Button Name="btnLogin" Content="Login" HorizontalAlignment="Center"  VerticalAlignment="Bottom" Width="74" Margin="6,0,9,15" Height="20" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="2" Click="btnLogin_Click"/>
    </Grid>
</Window>
