<Window x:Class="POP_SF27_2016_Projekat.GUI.DodavanjePromena.DpKorisnik"
        xmlns:s="clr-namespace:POP_SF27_2016_Projekat.Model" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:POP_SF27_2016_Projekat.GUI.DodavanjePromena"
        mc:Ignorable="d"
        Title="DpKorisnik" Height="250" Width="250">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="35"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Name="tblock" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="0"/>
        
        <Label Content="Ime:" Margin="10, 0, 0, 0" Grid.Column="0" Grid.Row="1"/>
        <TextBox Name="tbIme" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="1" Width="150"/>

        <Label Content="Prezime:" Margin="10, 0, 0, 0" Grid.Column="0" Grid.Row="2"/>
        <TextBox Name="tbPrezime" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="2" Width="150"/>

        <Label Content="Korisnicko ime:" Margin="10, 0, 0, 0" Grid.Column="0" Grid.Row="3"/>
        <TextBox Name="tbKorisnickoIme" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="3" Width="150"/>

        <Label Content="Lozinka:" Margin="10, 0, 0, 0" Grid.Column="0" Grid.Row="4"/>
        <TextBox Name="tbLozinka" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="4" Width="150"/>

        <Label Content="Tip:" Margin="10, 0, 0, 0" Grid.Column="0" Grid.Row="5"/>
        <ComboBox Name="cbTip" Margin="0, 5, 10, 5" Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="5" ItemsSource="{Binding Source={x:Static s:TipKorisnika.tipKorisnikaCollection}}" SelectedValuePath="Id" DisplayMemberPath="Naziv"/>

        <Button Name="btnOk" Content="Ok" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="1" Grid.Row="6" Width="60" Click="btnOk_Click"/>
        <Button Name="btnCancel" Content="Cancel" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="2"  Grid.Row="6"  Width="60" Click="btnCancel_Click"/>
    </Grid>
</Window>
